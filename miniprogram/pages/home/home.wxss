/* pages/home/home.wxss */

.topub{
  position: fixed;
  top: 0;
  right: 0;
}

.hometopub{
  text-align: right;
  display: block;
}

block{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.home-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 16px 16px;
  margin: 0 auto;
}

.user-head {
  width: 36px;
  height: 36px;
  line-height: 36px;
  border-radius: 50%;
  background-color: #ccc;
}

.homename{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  font-weight: bold;
}

.homedate{
  font-size: 15px;
  color: #999;
}

.info{
  display: flex;
  flex-direction: row;
}

.content{
  display: flex;
  flex-direction: column;
  margin-right: 5%;
  margin-top: 10px;
}

.content-item{
  font-size: 18px;
  color: #666;
}

.content-scorll{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.content-img{
  width: 100px;
  height: 100px;
  margin-top: 10px;
  margin-left: 10px;
}


.container-line{
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 10px;
}